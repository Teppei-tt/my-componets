<style>
	position: relative;

	&::before {
		background: $font-color-primary;
		content: '';
		width: 100%;
		height: 1px;
		position: absolute;
		left: 0;
		bottom: 0;
		margin: auto;
		transform-origin: right top;
		transform: scale(0, 1);
		transition: transform 0.3s;
	}

	&:hover {
		&::before {
			transform-origin: left top;
			transform: scale(1, 1);
		}
	}
</style>
